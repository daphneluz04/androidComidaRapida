<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginEnd="8dp"
        android:background="#B6E4EA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent2">

            <TextView
                android:id="@+id/itemNombre"
                android:layout_width="201dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:background="#BCCAFA"
                android:fontFamily="@font/aclonica"
                android:hint="Nombre"
                android:text="Nombre"
                android:textColor="#040404"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/itemImagen"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemDescripcion"
                android:layout_width="203dp"
                android:layout_height="92dp"
                android:layout_marginStart="8dp"
                android:background="#BCCAFA"
                android:fontFamily="@font/aclonica"
                android:hint="Descripcion"
                android:text="Descripcion"
                android:textColor="#090909"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemPrecio" />

            <ImageView
                android:id="@+id/itemImagen"
                android:layout_width="135dp"
                android:layout_height="117dp"

                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_porcion_de_comida" />

            <TextView
                android:id="@+id/itemPrecio"
                android:layout_width="202dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:background="#BCCAFA"
                android:fontFamily="@font/aclonica"
                android:hint="Precio"
                android:text="Precio"
                android:textColor="#050505"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/itemImagen"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemNombre" />

            <Button
                android:id="@+id/itemBorrarMenu"
                android:layout_width="96dp"
                android:layout_height="45dp"

                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="#E16464"
                android:fontFamily="@font/aclonica"
                android:text="Borrar"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemDescripcion"
                app:layout_constraintTop_toBottomOf="@+id/itemImagen"
                app:layout_constraintVertical_bias="0.6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>